<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_weight="1"
            android:background="#DAC6C6"
            android:text="Users may not share or transmit content that is: Illegal, harmful, threatening, abusive, harassing, tortious, defamatory, vulgar, obscene, libelous, invasive of privacy, or hateful."
            android:textStyle="bold|italic" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="567dp"
            android:background="#ECF3E5">

            <TextView
                android:id="@+id/chatLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:textSize="20sp" />


        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="332dp"
                android:layout_height="70dp"
                android:background="@drawable/border"
                android:hint="Type a message" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="69dp"
                android:layout_height="63dp"
                app:icon="@drawable/baseline_send_24"
                app:iconSize="30dp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>