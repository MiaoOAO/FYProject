<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserMainPageFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="414dp"
        android:layout_height="252dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/visitorRegBtn"
        android:layout_width="175dp"
        android:layout_height="135dp"
        android:text="Visitor Pre-Registration"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_app_registration_24"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager2"
        app:layout_constraintVertical_bias="0.135" />

    <Button
        android:id="@+id/visitorListBtn"
        android:layout_width="175dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:text="Visitor List"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_list_alt_24"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/visitorRegBtn"
        app:layout_constraintStart_toEndOf="@+id/visitorRegBtn"
        app:layout_constraintTop_toTopOf="@+id/visitorRegBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/parkingResBtn"
        android:layout_width="175dp"
        android:layout_height="135dp"
        android:layout_marginTop="48dp"
        android:text="Parking Reservation"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_local_parking_24"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:layout_constraintEnd_toEndOf="@+id/visitorRegBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/visitorRegBtn"
        app:layout_constraintTop_toBottomOf="@+id/visitorRegBtn" />

    <Button
        android:id="@+id/parkingListBtn"
        android:layout_width="175dp"
        android:layout_height="135dp"
        android:text="Parking Reservation List"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_checklist_24"
        app:iconGravity="top"
        app:iconSize="50dp"
        app:layout_constraintEnd_toEndOf="@+id/visitorListBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/visitorListBtn"
        app:layout_constraintTop_toTopOf="@+id/parkingResBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>