<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitorRegistrationFragment">

    <EditText
        android:id="@+id/visName"
        android:layout_width="275dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Visitor's name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/visDateTv"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="@+id/visDateBtn"
        app:layout_constraintTop_toBottomOf="@+id/visDateBtn" />

    <EditText
        android:id="@+id/visPlateNo"
        android:layout_width="275dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Visitor's car plate (WWW1234)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/visName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/visName"
        app:layout_constraintTop_toBottomOf="@+id/visName" />

    <EditText
        android:id="@+id/visPhone"
        android:layout_width="275dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Visitor's phone number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/visPlateNo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/visPlateNo"
        app:layout_constraintTop_toBottomOf="@+id/visPlateNo" />

    <TextView
        android:id="@+id/visDateTv"
        android:layout_width="123dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:hint="Date..."
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/visDateBtn"
        app:layout_constraintStart_toEndOf="@+id/visDateBtn"
        app:layout_constraintTop_toTopOf="@+id/visDateBtn"
        app:layout_constraintVertical_bias="0.555" />

    <Button
        android:id="@+id/visSubmitBtn"
        android:layout_width="261dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="@+id/visPhone"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="@+id/visPhone"
        app:layout_constraintTop_toBottomOf="@+id/visPhone" />

    <Button
        android:id="@+id/visDateBtn"
        android:layout_width="152dp"
        android:layout_height="77dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:text="Pick the date"
        app:cornerRadius="10dp"
        app:icon="@drawable/baseline_date_range_24"
        app:iconSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Visitor Registration"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>