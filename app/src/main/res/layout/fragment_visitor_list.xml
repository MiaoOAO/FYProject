<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/visitorListLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6EEEE"
    android:fitsSystemWindows="true"
    tools:context=".VisitorListFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:id="@+id/view6"
        android:layout_width="416dp"
        android:layout_height="367dp"
        android:background="#BCEABE"
        android:rotation="360"
        android:rotationX="-180"
        android:rotationY="-34"
        android:scaleX="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view7"
        android:layout_width="416dp"
        android:layout_height="367dp"
        android:layout_marginTop="400dp"
        android:background="#BBE1F3"
        android:rotation="144"
        android:rotationX="210"
        android:rotationY="-171"
        android:scaleX="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/visListSearch"
        android:layout_width="241dp"
        android:layout_height="48dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Plate number search..."
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <Button
        android:id="@+id/visListSearchBtn"
        android:layout_width="84dp"
        android:layout_height="63dp"
        android:layout_marginStart="4dp"
        app:cornerRadius="300dp"
        app:icon="@drawable/baseline_search_24"
        app:iconSize="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/visListSearch"
        app:layout_constraintStart_toEndOf="@+id/visListSearch"
        app:layout_constraintTop_toTopOf="@+id/visListSearch"
        app:layout_constraintVertical_bias="0.761" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/visListRecyclerView"
        android:layout_width="387dp"
        android:layout_height="561dp"
        android:layout_marginBottom="16dp"
        android:isScrollContainer="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/visitor_list_layout" />

    <Spinner
        android:id="@+id/visitorList_spinner"
        android:layout_width="104dp"
        android:layout_height="54dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>